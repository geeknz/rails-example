<h1>Budgets</h1>

<%= link_to 'New budget', new_budget_path %>

<table>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
 
  <% @budgets.each do |budget| %>
    <tr>
      <td><%= budget.title %></td>
      <td><%= link_to 'Show', budget_path(budget) %></td>
      <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
      <td><%= link_to 'Delete', budget_path(budget), method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
